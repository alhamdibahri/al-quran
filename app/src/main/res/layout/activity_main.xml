<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="2.5"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/backgroundColor"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:text="MAIN MENU"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_weight="1"
        android:clipToPadding="false"
        android:gravity="center"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnSurah"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@drawable/circlebackgroundpurple"
                    android:layout_width="120dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_library_books_black_24dp"
                    android:layout_height="120dp"/>
                
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:text="Daftar Surat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnKursi"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@drawable/circlebackgroundgreen"
                    android:layout_width="120dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_content_paste_black_24dp"
                    android:layout_height="120dp"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:text="Ayat Kursi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:clipToPadding="false"
        android:gravity="center"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnAsmaul"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@drawable/circlebackgroundpink"
                    android:layout_width="120dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_looks_black_24dp"
                    android:layout_height="120dp"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:text="Asmaul Husna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnDoa"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@drawable/circlebackroundyellow"
                    android:layout_width="120dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_import_contacts_black_24dp"
                    android:layout_height="120dp"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:text="Doa Harian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</LinearLayout>